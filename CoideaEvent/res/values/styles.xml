<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="tv_style">
	    <item name = "android:textColor">@color/black</item>
	    <item name = "android:textSize">15sp</item>
	    <item name = "android:layout_width">fill_parent</item>
	    <item name = "android:layout_height">fill_parent</item>
	    <item name = "android:background">@color/beige</item>
	    <item name = "android:gravity">center|center</item>
	</style>
	<style name="tv_all_style">
	    <item name = "android:textColor">@color/black</item>
	    <item name = "android:textSize">15sp</item>
	    <item name = "android:layout_width">fill_parent</item>
	    <item name = "android:layout_height">wrap_content</item>
	    <item name = "android:gravity">center|center</item>
	</style>
	<style name="tv_title_style">
	    <item name = "android:textColor">@color/black</item>
	    <item name = "android:textSize">18sp</item>
	    <item name = "android:layout_width">wrap_content</item>
	    <item name = "android:layout_height">wrap_content</item>
	    <item name = "android:layout_centerInParent">true</item>
	    <item name = "android:gravity">center|center</item>
	</style>
	<style name="btn_style">
	    <item name = "android:textColor">@color/black</item>
	    <item name = "android:textSize">15sp</item>
	    <item name = "android:layout_width">fill_parent</item>
	    <item name = "android:layout_height">fill_parent</item>
	    <item name = "android:layout_weight">1</item>
	    <item name = "android:gravity">center|bottom</item>
	</style>
	<style name="btn_back_style">
	    <item name = "android:textColor">@color/black</item>
	    <item name = "android:textSize">15sp</item>
	    <item name = "android:layout_width">wrap_content</item>
	    <item name = "android:layout_height">wrap_content</item>
	    <item name = "android:gravity">center|bottom</item>
	    <item name = "android:layout_centerVertical">true</item>
	    <item name = "android:layout_marginLeft">5dp</item>
	    <item name = "android:background">@drawable/ic_action_back</item>
	</style>
	<style name="btn_find_style">
	    <item name = "android:textColor">@color/black</item>
	    <item name = "android:textSize">25sp</item>
	    <item name = "android:layout_width">fill_parent</item>
	    <item name = "android:layout_height">fill_parent</item>
	    <item name = "android:layout_weight">1</item>
	    <item name = "android:background">@color/aliceblue</item>
	    <item name = "android:gravity">center|center</item>
	</style>
</resources>